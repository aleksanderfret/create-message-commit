{
  "name": "git-names",
  "version": "0.0.1",
  "type": "module",
  "description": "Git branch name validator and commit message prefixer",
  "main": "dist/cjs/index.cjs",
  "module": "dist/mjs/index.js",
  "types": "dist/mjs/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/mjs/types/index.d.ts",
        "default": "./dist/mjs/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "bin": {
    "gcnames": "./dist/mjs/cli.js"
  },
  "scripts": {
    "start": "npx ts-node -T scripts/clean.ts dist",
    "check": "npm-run-all lint format test:all compile clean",
    "clean": " npx ts-node -T scripts/clean.ts dist",
    "compile": "tsc -p ./tsconfig.json",
    "format": "prettier --check \"src/**/*.{js,ts}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint . --ext \".js,.ts\"",
    "lint:fix": "eslint . --ext \".js,.ts,\" --fix",
    "prepare": "husky install",
    "prepublishOnly2": "npm run check",
    "pre-commit": "lint-staged",
    "pre-push2": "npm run check",
    "preversion": "npm-run-all format:fix lint:fix",
    "postversion": "git push && git push --tags",
    "test": "jest --no-cache --watchAll=false --passWithNoTests",
    "test:all": "CI=true jest --passWithNoTests",
    "test:watch": "jest --watch",
    "version": "npm run format:fx && git add -A src",
    "a": "npm run build && node dist/mjs/cli.js vbn --config package.json",
    "b": "npm run build && node dist/cjs/cli.js vbn",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:mjs": "tsc -p ./tsconfig.esm.json",
    "build": "npm run clean && npm run build:cjs && npm run build:mjs"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksanderfret/git-names.git"
  },
  "author": {
    "name": "Aleksander Fret",
    "email": "olekfret80@gmail.com",
    "url": "https://github.com/aleksanderfret/"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aleksanderfret/git-names/issues"
  },
  "homepage": "https://github.com/aleksanderfret/git-namese#readme",
  "devDependencies": {
    "@commander-js/extra-typings": "^10.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.9",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "ts-jest": "^29.0.5",
    "ts-lib": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint -c .eslintrc --fix",
      "npm run test"
    ]
  },
  "gitConventionalNames": {
    "ticketPrefix": "gna"
  },
  "dependencies": {
    "commander": "^10.0.0"
  }
}
